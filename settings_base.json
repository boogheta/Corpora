{
  "protocol": "https",
  "host": "localhost",
  "desired_port": 8080,
  "redirect_port": "",
  "userDirPath": "documents",
  "userDirname": "corpora",
  "cache_content": true,

  "contentDirname": "user",
  "cacheDirname": "corpora_cache",
  "metaFileext": ".txt",
  "thumbExt": ".jpeg",
  "thumbFormat": "jpeg",
  "folderMetaFilename": "meta",
  "folderPreviewFilename": "meta_preview",

  "privateKeyPath": "",
  "certificatePath": "",

  "metaDateFormat": "YYYYMMDD_HHmmss",
  "textEncoding": "UTF-8",
  "thumbFolderName": "_thumbs",
  "deletedFolderName": "_bin",

  "mediaThumbQuality": 70,
  "maxFileSizeForUpload": 20000,

  "regexpMatchFolderNames": "^([^.]+)$",
  "regexpGetFileExtension": "\\.[^.]*$",
  "regexpRemoveFileExtension": "(.+?)(\\.[^.]*$|$)",

  "api": {
    "enabled": false,
    "allow_all_domains": false,
    "domains_whitelist": []
  },

  "structure": {
    "corpus": {
      "path": "",
      "preview": {
        "width": 1600,
        "height": 1600,
        "thumbs": {
          "resolutions": [50, 320, 640]
        }
      },
      "fields": {
        "name": {
          "type": "string"
        },
        "subtitle": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "date_created": {
          "type": "date",
          "default": "current",
          "read_only": true
        },
        "date_modified": {
          "type": "date",
          "default": "current",
          "override": true
        },
        "password": {
          "type": "string"
        },
        "contribution_moments": {
          "type": "array"
        },
        "sort_in_tabs": {
          "type": "boolean",
          "default": false
        }
      },
      "medias": {
        "thumbs": {
          "resolutions": [180, 360, 600, 800, 1600]
        },
        "fields": {
          "date_created": {
            "type": "date",
            "default": "current",
            "read_only": true
          },
          "date_modified": {
            "type": "date",
            "default": "current",
            "override": true
          },
          "date_uploaded": {
            "type": "date",
            "default": "current",
            "read_only": true
          },
          "media_filename": {
            "type": "string"
          },
          "original_media_filename": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "caption": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "options": [
              "image",
              "video",
              "audio",
              "text",
              "embed",
              "link",
              "document",
              "fragment",
              "collection",
              "other"
            ],
            "default": "other"
          },
          "fragments_slugs": {
            "type": "array"
          },
          "medias_slugs": {
            "type": "array"
          },
          "contribution_moment": {
            "type": "string"
          },
          "tags": {
            "type": "array"
          },
          "keywords": {
            "type": "array"
          },
          "file_meta": {
            "type": "array",
            "read_only": true
          }
        }
      }
    }
  }
}
